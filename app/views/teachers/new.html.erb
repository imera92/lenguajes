<!DOCTYPE html>
<html lang="en">
<head>
	<title>Thinker | Registro de Usuario</title>
</head>
<body>
	<section class="container-fluid">
		<div class="row">
			<div class = "col-md-12">
				<h1 id="teacher_new">Sign up</h1>
			</div>
		</div>
		<%= form_for(@teacher) do |f| %>
		<%= render 'shared/error_messages' %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.label :name, "Nombre" %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.text_field :name, class: 'form-control' %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.label :email %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.email_field :email, class: 'form-control' %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.label :password %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.password_field :password, class: 'form-control' %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.label :password_confirmation, "Confirmacion" %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.password_field :password_confirmation, class: 'form-control' %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= f.submit "Crear cuenta", class: "btn btn-primary" %>
			</div>
		</div>
		<% end %>
	</section>
</body>
</html>